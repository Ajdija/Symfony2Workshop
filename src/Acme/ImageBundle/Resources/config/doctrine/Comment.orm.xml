<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\ImageBundle\Entity\Comment">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255"/>
    <field name="content" type="string" column="content" length="255"/>
    <field name="createdAt" type="datetime" column="created_at" length="255"/>
    <field name="editedAt" type="datetime" column="edited_at"/>
    <many-to-one
          field="user"
          target-entity="User"
          inversed-by="comments">

      <join-column name="user_id" referenced-column-name="id" />
    </many-to-one>
      <many-to-one
              field="image"
              target-entity="Image"
              inversed-by="comments">

          <join-column name="image_id" referenced-column-name="id" />
      </many-to-one>
  </entity>
</doctrine-mapping>
