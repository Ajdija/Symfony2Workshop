{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comment list</h1>

        {% for comment in comments %}
                <div><a href="{{ path('comment_show', { 'id': comment.id }) }}">{{ comment.name }}</a></div>
                <div>{{ comment.content }}</div>
                <div>{% if comment.createdAt %}{{ comment.createdAt|date('Y-m-d H:i:s') }}{% endif %}</div>
                <div>{% if comment.editedAt %}{{ comment.editedAt|date('Y-m-d H:i:s') }}{% endif %}</div>
                <div>{{ comment.id }}</div>
                <ul>
                    <li>
                        <a href="{{ path('comment_show', { 'id': comment.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('comment_edit', { 'id': comment.id }) }}">edit</a>
                    </li>
                </ul>
        {% endfor %}
        <ul>
        <li>
            <a href="{{ path('comment_new') }}">
                Create a new entry
            </a>
        </li>
        </ul>
{% endblock %}
